[module/coretemps]
type = custom/script
exec-if = sensors
exec = sensors | egrep -e "temp1|temp2" | awk '{print substr($2, 2, length($2)-5)}' | tr '\n' ' ' | sed 's/ /¬∞C  /g' | sed 's/  $//'
format-prefix = "Ôãá "
